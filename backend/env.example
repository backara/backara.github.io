# Server Configuration
PORT=4000
NODE_ENV=development

# Frontend URL for CORS
FRONTEND_URL=http://localhost:3000

# Database Configuration (when implemented)
# DATABASE_URL=postgresql://username:password@localhost:5432/tiktok_scheduler
# REDIS_URL=redis://localhost:6379

# TikTok API Configuration (when implemented)
# TIKTOK_CLIENT_ID=your_tiktok_client_id
# TIKTOK_CLIENT_SECRET=your_tiktok_client_secret
# TIKTOK_REDIRECT_URI=https://your-domain.com/api/auth/tiktok/callback

# JWT Configuration (when implemented)
# JWT_SECRET=your_super_secret_jwt_key_here
# JWT_EXPIRES_IN=7d

# File Upload Configuration
# MAX_FILE_SIZE=50MB
# UPLOAD_PATH=./uploads

# External Services (when implemented)
# AWS_ACCESS_KEY_ID=your_aws_key
# AWS_SECRET_ACCESS_KEY=your_aws_secret
# AWS_S3_BUCKET=your-s3-bucket
# AWS_REGION=us-west-2

# Monitoring and Logging
# SENTRY_DSN=your_sentry_dsn
# LOG_LEVEL=info

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# CORS Settings
CORS_ORIGIN=http://localhost:3000,https://your-domain.com
